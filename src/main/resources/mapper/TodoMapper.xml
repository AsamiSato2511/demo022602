<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.TodoMapper">

    <resultMap id="TodoResultMap" type="com.example.demo.model.Todo">
        <id property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="completed" column="completed"/>
    </resultMap>

    <select id="findAll" resultMap="TodoResultMap">
        SELECT id, title, completed
        FROM todos
        ORDER BY id
    </select>

    <select id="findById" parameterType="long" resultMap="TodoResultMap">
        SELECT id, title, completed
        FROM todos
        WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="com.example.demo.model.Todo" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO todos (title, completed)
        VALUES (#{title}, #{completed})
    </insert>

    <update id="update" parameterType="com.example.demo.model.Todo">
        UPDATE todos
        SET title = #{title},
            completed = #{completed}
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="long">
        DELETE FROM todos
        WHERE id = #{id}
    </delete>
</mapper>